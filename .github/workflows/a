name: "tagged-release"

on:
  workflow_dispatch
  

jobs:
  tagged-release:
    name: "Tagged Release"
    runs-on: "ubuntu-latest"

    steps:
      # ...
      - name: "Build & test"
        run: |
          echo "done!"
          touch 1.txt
          touch 2.txt
          mkdir test
      - uses: "marvinpinto/action-automatic-releases@latest"
        with:
          repo_token: "${{ secrets.GITHUB_TOKEN }}"
          prerelease: false
          files: |
            *.*
            LICENSE.txt
            *.jar
